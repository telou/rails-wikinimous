<div class="container bg-light p-50">
  <%= form_for(@article) do |f| %>
  <div class="row">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control'%>
  </div>

  <div class="row">
    <%= f.label :content %>
    <%= f.text_area :content, class:'form-control' %>
  </div>
  <div class="row">
    <%= f.submit class:'btn btn-primary' %>
  </div>
  <% end %>
</div>
